<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.developers.ui.DevelopersFragment">

    <androidx.appcompat.widget.Toolbar
        style="@style/Toolbar"
        android:layout_width="match_parent"
        app:title="@string/team" />

    <TextView
        style="@style/MainHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/worked_on_app" />

    <TextView
        style="@style/DeveloperTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_developer" />

    <TextView
        style="@style/DeveloperTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_developer" />

    <TextView
        style="@style/DeveloperTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/third_developer" />

    <TextView
        style="@style/DeveloperTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fourth_developer" />

</LinearLayout>