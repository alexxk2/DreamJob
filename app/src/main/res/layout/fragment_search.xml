<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/ScreensBackground"
    tools:context=".presentation.search.ui.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/margin_vertical_19"
        android:layout_marginHorizontal="@dimen/margin_horizontal">

        <TextView
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:text="@string/search_title" />

        <ImageView
            android:id="@+id/search_icon_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_filter"
            android:contentDescription="@string/filter_description"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_search"
            style="@style/baseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/edit_text_margin_vertical"
            android:autofillHints=""
            android:background="@drawable/rounder_background"
            android:drawableEnd="@drawable/ic_search"
            android:hint="@string/search_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:paddingVertical="@dimen/margin_horizontal"
            android:paddingStart="@dimen/margin_horizontal"
            android:paddingEnd="@dimen/margin_horizontal"
            android:singleLine="true"
            android:textColorHint="@color/grey" />

        <TextView
            android:id="@+id/search_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_message_background"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/message_margin_horizontal"
            android:paddingVertical="@dimen/message_margin_vertical"
            android:visibility="gone"
            style="@style/searchMessageText"
            tools:text="@string/vacancy_not_found"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_search_not_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_description"
            android:src="@drawable/search_not_started"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_vacancy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/blue"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>