<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/horizontal_margin</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/headline_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainHeadline">
        <item name="android:textSize">@dimen/main_headline_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DeveloperTextview">
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    
</resources>