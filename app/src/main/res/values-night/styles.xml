<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainHeadline">
        <item name="android:textSize">@dimen/main_headline_size</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="baseLineMedium">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="titleText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="baseText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="button_clear" parent="baseLineMedium">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>